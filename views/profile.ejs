
<img src="<%= user.avatar %>" alt="<%= user.name %>" width="100" height="100">

<% if(user.id == profile_user.id) {%>
    <p>Name: <%=profile_user.name%></p>
    <p>Email: <%=profile_user.email%></p>
    <form action="/users/update/<%= profile_user.id %>" enctype="multipart/form-data" method="POST">
        <input type="text" name="name" value="<%= profile_user.name %>" required>
        <input type="email" name="email" value="<%= profile_user.email %>" required> 
        <input type="file" name="avatar" placeholder="Profile Picture">
        <input type="submit" value="update">
    </form>
    <div><a href="/users/sign-out">Sign-Out</a></div>
<%} else {%>
    <p>Name: <%=profile_user.name%></p>
    <p>Email: <%=profile_user.email%></p>
<%}%>